<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_margin="10dp"
    android:layout_gravity="center"
    android:gravity="center"
    android:padding="10dp">
    <com.google.android.material.textview.MaterialTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="If You Use Google Login Please Re-Authenticate Yourself For Password Creation"
        android:fontFamily="@font/ubuntu"
        android:textSize="15sp"
        android:textColor="#000000"
        android:gravity="center"
        />
    <com.google.android.material.textview.MaterialTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="PROFILE VIEW"
        android:fontFamily="@font/ubuntu"
        android:textSize="22sp"
        android:layout_marginTop="5dp"
        android:textColor="#06873B"
        android:gravity="center"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        >
        <com.google.android.material.textview.MaterialTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="NAME"
            android:fontFamily="@font/ubuntu"
            android:textSize="15sp"
            android:textColor="#000000"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:gravity="center"
            />
        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/ubuntu"
            android:textSize="15sp"
            android:text="Refreshing.."
            android:textColor="#000000"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:gravity="center"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="5dp"
        >
        <com.google.android.material.textview.MaterialTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="EMAIL_ID"
            android:fontFamily="@font/ubuntu"
            android:textSize="15sp"
            android:textColor="#000000"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:gravity="center"
            />
        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/ubuntu"
            android:textSize="15sp"
            android:textColor="#000000"
            android:text="Refreshing.."
            android:layout_weight="1"
            android:layout_gravity="center"
            android:gravity="center"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="5dp"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="5dp"
        />
    <com.google.android.material.button.MaterialButton
        android:id="@+id/pass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="UPDATE PASSWORD"
        android:fontFamily="@font/ubuntu"
        android:textSize="15sp"
        android:textColor="#FFFFFF"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:drawableLeft="@drawable/passwordset"
        />
    <com.google.android.material.button.MaterialButton
        android:id="@+id/delete"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="DELETE ACCOUNT"
        android:fontFamily="@font/ubuntu"
        android:textSize="15sp"
        android:textColor="#FFFFFF"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:drawableLeft="@drawable/delete"
        />
    <com.google.android.material.textview.MaterialTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:gravity="center"
        android:text="POWEREDBY"
        style="?attr/materialThemeOverlay"
        android:textSize="12sp"
        android:textStyle="bold"
        android:layout_marginTop="65dp"
        android:textColor="#00838F"/>
    <com.google.android.material.textview.MaterialTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:gravity="center"
        android:text="Krypto Developers Pvt. Ltd."
        style="?attr/materialThemeOverlay"
        android:textSize="12sp"
        android:textStyle="bold"
        android:textColor="#041067"/>
    <ImageView
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:src="@drawable/logo"
        android:layout_gravity="center"
        />
</LinearLayout>